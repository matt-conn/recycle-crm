<%- include('partials/header') -%>

<div class="column is-three-fifths is-offset-one-fifth mt-6 py-6">
	<div class="notification is-dark py-3">
		<h1 class="subtitle is-2 has-text-centered has-text-light">Log In</h1>
	</div>

    <div class="notification is-light py-6">
		<% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <% if (locals.messages.info) { %>
            <% messages.info.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <form action="/login" method="POST">
            <div class="field">
                <p class="control has-icons-left has-icons-right">
                    <input class="input" type="email" name="email" placeholder="Email">
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="password" name="password" placeholder="Password">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <input class="input button is-success" type="submit" value="Login">
            </div>
        </form>
	</div>

</div>

<%- include('partials/footer') -%>