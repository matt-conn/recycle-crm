<%- include('partials/dashboard') -%>

<div class="ml-0-touch" style="margin-left: 250px">
    <section class="main-content columns is-fullheight is-centered">
        <div class="container column is-full">
            <div class="section">
                <div class="">
                    <!-- header -->
                    <div class="container has-background-white mb-6">
                        <p class="card-header-title">Companies</p>
                    </div>

                    <button class="button is-primary js-modal-trigger" data-target="modal-js-example">
                        Add a Company
                    </button>

                    <div id="modal-js-example" class="modal" style="margin-left: 250px">
                        <div class="modal-background"></div>
                        <div class="modal-card">
                            <header class="modal-card-head">
                                <p class="modal-card-title">Add a Company</p>
                                <button class="delete" aria-label="close"></button>
                            </header>
                            <section class="modal-card-body">
                                <form action="/dashboard/createCompany" method="POST">
                                    <div class="field">
                                        <label for="company" class="label">Company</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="ACME, Inc." name="company">
                                        </div>
                                    </div>
    
                                    <div class="field">
                                        <label for="website" class="label">Website</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="www.acme.com" name="website">
                                        </div>
                                    </div>
    
                                    <div class="field">
                                        <label for="phone" class="label">Phone</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="Phone" name="phone">
                                        </div>
                                    </div>
    
                                    <div class="field">
                                        <label for="street" class="label">Street</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="Street" name="street">
                                        </div>
                                    </div>
    
                                    <div class="field">
                                        <label for="city" class="label">City</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="City" name="city">
                                        </div>
                                    </div>
    
                                    <div class="field">
                                        <label for="state" class="label">State</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="State" name="state">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label for="zip" class="label">Zip Code</label>
                                        <div class="control">
                                            <input class="input" type="text" placeholder="Zip" name="zip">
                                        </div>
                                    </div>
    
                                    <div class="field is-grouped">
                                        <div class="control">
                                            <button class="button is-link">Submit</button>
                                        </div>
                                    </div>
                                </form>    
                            </section>
                            <footer class="modal-card-foot">
                                
                            </footer>
                        </div>
                        <button class="modal-close is-large" aria-label="close"></button>
                    </div>
                    
                    <!-- table -->
                    <div class="container has-background-white mt-5">
                        <table class="table is-bordered is-narrow is-fullwidth is-hoverable">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Website</th>
                                    <th>Phone</th>
                                    <th>Street</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Zip Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < companies.length; i++) { %>
                                    <tr>
                                        <td> <%= companies[i].company %> </td>
                                        <td> <%= companies[i].website %> </td>
                                        <td> <%= companies[i].phone %> </td>
                                        <td> <%= companies[i].street %> </td>
                                        <td> <%= companies[i].city %> </td>
                                        <td> <%= companies[i].state %> </td>
                                        <td> <%= companies[i].zip %> </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<%- include('partials/footer') -%>